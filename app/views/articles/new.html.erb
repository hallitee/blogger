<h1> Create New Article </h1>
<%= form_for(@articles) do |f| %>
<ul>
<% @articles.errors.full_messages.each do |error| %>
	<li> <%= error %> </li>
	<% end %>
	</ul>
<p> 
<%= f.label :title %>
<%= f.text_field :title %>
</p>

<p>
<%= f.label :body %>
<%= f.text_area :body %>
</p>

<p> <%= f.submit %> </p>

<% end %>
